<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Timetable</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .actions {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn {
            padding: 12px 30px;
            margin: 0 10px;
            border: none;
            border-radius: 25px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
        }

        /* Tabs */
        .tabs {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 30px;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 10px;
        }

        .tab {
            padding: 12px 25px;
            background: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 8px 8px 0 0;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            color: #495057;
        }

        .tab:hover {
            background: #e9ecef;
        }

        .tab.active {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .tab.cse.active {
            background: #007bff;
            border-color: #007bff;
        }

        .tab.dsai.active {
            background: #28a745;
            border-color: #28a745;
        }

        .tab.ece.active {
            background: #dc3545;
            border-color: #dc3545;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .timetable-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            margin-bottom: 0;
        }

        .timetable-header.cse {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .timetable-header.dsai {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        .timetable-header.ece {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .timetable-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0;
            font-size: 0.85em;
        }

        th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 8px;
            text-align: center;
            font-weight: 600;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        th:first-child {
            position: sticky;
            left: 0;
            z-index: 11;
        }

        td {
            padding: 12px 8px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        td:first-child {
            background: #f8f9fa;
            font-weight: 600;
            color: #667eea;
            position: sticky;
            left: 0;
            z-index: 9;
        }

        .lecture {
            background: #cfe2ff;
            border-left: 4px solid #0d6efd;
        }

        .lab {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .tutorial {
            background: #d1e7dd;
            border-left: 4px solid #198754;
        }

        .slot-info {
            font-size: 0.75em;
            display: block;
            margin-top: 3px;
            color: #666;
        }

        .course-name {
            font-weight: 600;
            display: block;
            margin-bottom: 3px;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.2em;
        }

        @media print {
            body {
                background: white;
            }
            .container {
                box-shadow: none;
            }
            .actions, .tabs {
                display: none;
            }
            .tab-content {
                display: block !important;
                page-break-after: always;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üìÖ Class Timetables - All Branches & Years</h1>
        
        <div class="actions">
            <a href="/" class="btn btn-primary">‚Üê Back to Upload</a>
            <button class="btn btn-success" onclick="window.location.href='/download'">üì• Download CSV</button>
            <button class="btn btn-primary" onclick="window.print()">üñ®Ô∏è Print All</button>
        </div>

        <% 
        const hasGroupedData = typeof groupedByBranchYear !== 'undefined' && 
                               groupedByBranchYear !== null && 
                               Object.keys(groupedByBranchYear).length > 0;
        %>
        
        <% if (!hasGroupedData) { %>
            <div class="no-data">
                No timetable generated yet. Please upload data and generate a timetable first.
            </div>
        <% } else { %>
            <!-- Tabs -->
            <div class="tabs">
                <% Object.keys(groupedByBranchYear).sort().forEach((key, index) => { 
                    const data = groupedByBranchYear[key];
                    // Skip invalid entries
                    if (!data || !data.entries || key.includes('undefined')) return;
                    const branchClass = key.toLowerCase().replace(/[^a-z]/g, '');
                %>
                    <div class="tab <%= branchClass %> <%= index === 0 ? 'active' : '' %>" 
                         onclick="showTab('tab-<%= key %>')">
                        <%= key %>
                        <span style="opacity: 0.8; font-size: 0.85em;">(<%=data.entries.length%> classes)</span>
                    </div>
                <% }); %>
            </div>

            <!-- Tab Contents -->
            <% Object.keys(groupedByBranchYear).sort().forEach((key, index) => { 
                const data = groupedByBranchYear[key];
                const branchClass = data.branch.toLowerCase().replace(/[^a-z]/g, '');
            %>
                <div id="tab-<%= key %>" class="tab-content <%= index === 0 ? 'active' : '' %>">
                    <div class="timetable-header <%= branchClass %>">
                        <h2 style="margin: 0;"><%= data.branch %> - Year <%= data.year %> Timetable</h2>
                        <p style="margin-top: 5px; opacity: 0.9;">Total Classes: <%= data.entries.length %></p>
                    </div>

                    <div class="timetable-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>DAY</th>
                                    <% timeSlots.forEach(slot => { %>
                                        <th><%= slot %></th>
                                    <% }); %>
                                </tr>
                            </thead>
                            <tbody>
                                <% days.forEach(day => { %>
                                    <tr>
                                        <td><%= day %></td>
                                        <% timeSlots.forEach(slot => { %>
                                            <% 
                                                const entry = data.entries.find(t => t.day === day && t.timeSlot === slot);
                                                let className = '';
                                                if (entry) {
                                                    if (entry.type.toLowerCase().includes('lab')) className = 'lab';
                                                    else if (entry.type.toLowerCase().includes('tutorial')) className = 'tutorial';
                                                    else className = 'lecture';
                                                }
                                            %>
                                            <td class="<%= className %>">
                                                <% if (entry) { %>
                                                    <span class="course-name"><%= entry.course %></span>
                                                    <span class="slot-info"><%= entry.faculty %></span>
                                                    <span class="slot-info">Room: <%= entry.room %></span>
                                                    <span class="slot-info"><%= entry.type %></span>
                                                <% } %>
                                            </td>
                                        <% }); %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        function showTab(tabId) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(tabId).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
        }
    </script>
</body>
</html>